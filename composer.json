{
    "name": "postalsys/emailengine-php",
    "description": "Modern PHP SDK for EmailEngine - Send and receive emails via REST API",
    "type": "library",
    "keywords": ["email", "imap", "smtp", "emailengine", "api", "sdk"],
    "homepage": "https://emailengine.app",
    "license": "MIT",
    "authors": [
        {
            "name": "Andris Reinman",
            "email": "andris@reinman.eu"
        }
    ],
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Postalsys\\EmailEnginePhp\\": "src/"
        },
        "classmap": [
            "src/LegacyEmailEngine.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Postalsys\\EmailEnginePhp\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src --level=8",
        "cs": "phpcs --standard=PSR12 src",
        "cs:fix": "phpcbf --standard=PSR12 src"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
